<h2>会員情報入力</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname, "ニックネーム" %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplate: "nickname", placeholder: "例)furima太郎" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email", placeholder: "PC・携帯どちらでも可" %>
  </div>

 <div class="field">
   <%= f.label :password,"パスワード" %>
   <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
   <% end %><br />
   <%= f.password_field :password, autocomplete: "password", placeholder: "6文字以上の半角英数字" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "同じパスワードを入力して下さい" %>
  </div>

  <div class="field">
    <%= f.label :last_name, "お名前(全角)" %><br />
    <%= f.text_field :last_name, autocomplate: "last_name", placeholder: "例)山田" %>
    <%= f.text_field :first_name, autocomplete: "first_name", placeholder: "例)陸太郎" %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana, "お名前カナ(全角)" %><br />
    <%= f.text_field :last_name_kana, autocomplate: "last_name_kana", placeholder: "例)ヤマダ" %>
    <%= f.text_field :first_name_kana, autocomplate: "first_name_kana", placeholder: "例)リクタロ" %>
  </div>

  <div class="field">
    <%= f.label :birth_day, "生年月日" %><br />
    <%=f.date_select :birth_day, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 10) %>






  <div class="actions">
    <%= f.submit "会員登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
